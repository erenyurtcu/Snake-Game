#include <16F877A.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=16000000)

#define BUZZER_PIN PIN_B3

void main() {
   // RB3 çýkýþ olarak ayarlanýyor
   set_tris_b(get_tris_b() & 0b11110111);  // RB3 bitini 0 yap (çýkýþ)

   while(TRUE) {
      output_high(BUZZER_PIN);  // Ses baþla
      delay_ms(1);              // 1ms HIGH
      output_low(BUZZER_PIN);   // Ses kes
      delay_ms(1);              // 1ms LOW
   }
}

