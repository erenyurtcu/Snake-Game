#include <16F877A.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=16000000)

#define BUZZER_PIN PIN_B3

void main() {
   set_tris_b(0b11110111);  // RB3 output, diðerleri input
   output_low(BUZZER_PIN);  // Baþta kapalý

   while(TRUE) {
      // Buzzer 500 ms çalsýn
      output_high(BUZZER_PIN);
      delay_ms(500);

      // Sonra sustur
      output_low(BUZZER_PIN);
      delay_ms(1500);  // Bekle, bip bip gibi efekt için
   }
}

