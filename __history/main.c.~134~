#include <16F877A.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=16000000)

#define BUZZER PIN_B3

void main() {
   set_tris_b(0b11110111);  // RB3 çýkýþ
   output_low(BUZZER);      // Baþlangýçta kapalý

   while(TRUE) {
      output_high(BUZZER);  // Transistör BASE'ine sinyal › buzzer çalýþýr
      delay_ms(500);
      output_low(BUZZER);   // Kapat
      delay_ms(500);
   }
}

