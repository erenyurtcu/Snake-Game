#device ADC=10
#include <16F877A.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock=16000000)
#define BUZZER_PIN PIN_B3

void buzzer_on() {
   output_high(BUZZER_PIN);  // Buzzer öter
}

void buzzer_off() {
   output_low(BUZZER_PIN);   // Buzzer susar
}

void short_beep() {
   buzzer_on();
   delay_ms(500); // 100 ms öt
   buzzer_off();
}

