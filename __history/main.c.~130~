#include <16F877A.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP
#use delay(clock = 16000000)

#define BUZZER PIN_B3

void main() {
   set_tris_b(0b11110111);    // RB3 çýkýþ (0)
   output_low(BUZZER);        // Baþta sus

   while(TRUE) {
      output_high(BUZZER);    // BÝP baþlat
      delay_ms(100);          // 100 ms
      output_low(BUZZER);     // BÝP kapat
      delay_ms(1000);         // 1 sn bekle
   }
}

